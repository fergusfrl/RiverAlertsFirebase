rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if isSignedIn() && isCurrentUser(userId);
    }

    match /users/{userId}/alerts/{alertId} {
      allow read, update, delete: if isSignedIn() && isCurrentUser(userId);
      allow create: if isSignedIn() && isCurrentUser(userId) && canAddAlert(userId);
    }

    // -------- Helper functions ----------
    function isSignedIn() {
      return request.auth != null;
    }

    function isCurrentUser(userId) {
      return request.auth.uid == userId;
    }

    function canAddAlert(userId) {
      get(/users/$(userId)).data.alertCount < 3
    }
  }
}